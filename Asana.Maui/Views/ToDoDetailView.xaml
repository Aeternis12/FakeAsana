<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Asana.Maui.Views.ToDoDetailView"
             Title="ToDoDetailView"
             NavigatedFrom="ContentPage_NavigatedFrom"
             NavigatedTo="ContentPage_NavigatedTo">
    <VerticalStackLayout>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="12*"/>
            </Grid.ColumnDefinitions>
            <Label Text="Project: " Grid.Column="0"/>
            <Picker ItemsSource="{Binding Projects}"
                    SelectedItem="{Binding SelectedProject}" Grid.Column="1"/>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="12*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Text="ID: " Grid.Column="0" Grid.Row="0"/>
            <Entry Text="{Binding Model.Id}" Grid.Column="1" Grid.Row="0" IsReadOnly="True"/>
            <Label Text="Name : " Grid.Column="0" Grid.Row="1"/>
            <Entry Text="{Binding Model.Name}" Grid.Column="1" Grid.Row="1"/>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="12*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Text="Description: " Grid.Column="0" Grid.Row="0"/>
            <Entry Text="{Binding Model.Description}" Grid.Column="1" Grid.Row="0"/>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="12*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Text="Is ToDo Complete: " Grid.Column="0" Grid.Row="1"/>
            <CheckBox IsChecked="{Binding Model.IsCompleted}" Grid.Column="1" Grid.Row="1"/>
            <Label Text="Priority: " Grid.Column="0" Grid.Row="0"/>
            <Picker ItemsSource="{Binding Priorities}"
                    SelectedItem="{Binding SelectedPriority}" Grid.Column="1" Grid.Row="0"/>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.35*"/>
                <ColumnDefinition Width=".6*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Label Text="Due Date: " Grid.Column="0"/>
            <DatePicker Date="{Binding DueDate}" Grid.Column="1"/>
            <TimePicker Time="{Binding DueTime}" Grid.Column="2"/>  
        </Grid>
        <Button Text="Ok" Clicked="OkClicked"/>
        <Button Text="Cancel" Clicked="CancelClicked"/>
    </VerticalStackLayout>
</ContentPage>